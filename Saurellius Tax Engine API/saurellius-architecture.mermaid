    subgraph "API Layer"
        API --> Auth[Authentication Service]
        API --> RateLimit[Rate Limiting Service]
        API --> Endpoints[API Endpoints]
    end
    
    subgraph "Core Services"
        Endpoints --> TaxCalc[Tax Calculation Service]
        Endpoints --> LocationService[Location Service]
        Endpoints --> TaxRateService[Tax Rate Service]
        Endpoints --> FormulasService[Tax Formulas Service]
        Endpoints --> ReciprocityService[Reciprocity Service]
        Endpoints --> WebhookService[Webhook Service]
    end
    
    subgraph "Data Layer"
        TaxCalc --> TaxDatabase[(Tax Database)]
        LocationService --> TaxDatabase
        TaxRateService --> TaxDatabase
        FormulasService --> TaxDatabase
        ReciprocityService --> TaxDatabase
        WebhookService --> TaxDatabase
        LocationService --> GeocodingService[Geocoding Service]
    end
    
    subgraph "Auxiliary Systems"
        TaxDatabase --> UpdateService[Tax Update Service]
        WebhookService --> NotificationQueue[Notification Queue]
